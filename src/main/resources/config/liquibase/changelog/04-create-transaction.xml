<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>

     <!--
        Added the entity Transaction.           
    -->
    <changeSet id="04" author="vergil">
        <createTable tableName="transactions" remarks="A table to contain all accounts">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="account_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="type_transaction_id" type="bigint">
                <constraints nullable="false" />
            </column>            
            <column name="amount" type="double">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

             <column name="created_date" type="timestamp"/>
             <column name="end_date" type="timestamp"/>
             <column name="was_ended" type="boolean"/>

        </createTable>
        <addForeignKeyConstraint 
            baseColumnNames="account_id" 
            baseTableName="transactions" 
            constraintName="fk_acc_trans_id" 
            referencedColumnNames="id" 
            referencedTableName="accounts" />
            
         <addForeignKeyConstraint 
            baseColumnNames="type_transaction_id" 
            baseTableName="transactions" 
            constraintName="fk_type_trans_id" 
            referencedColumnNames="id" 
            referencedTableName="type_transactions" />

        <!-- <loadData 
              file="config/liquibase/data/2_accounts.csv" 
              separator=";" 
              tableName="accounts">
            <column name="id" type="numeric" />
            <column name="descricao" type="string" />
            <column name="saldo" type="numeric" />
            
        </loadData>-->
    </changeSet>

</databaseChangeLog>


